#!/bin/bash
# Test for an interactive shell.  There is no need to set anything
# past this point for scp and rcp, and it's important to refrain from
# outputting anything in those cases.
if [[ $- != *i* ]] ; then
	# Shell is non-interactive.  Be done now!
	return
fi

# User specific aliases and functions
#alias ssh
alias sun='ssh levitta@ensisun.imag.fr'
alias bull='ssh levitta@ensibull.imag.fr'
alias bob='ssh smeuuh@82.233.220.106'
alias sunredir='screen -d -m autossh levitta@ensisun.imag.fr -R 4242:localhost:22'
#alias d'Ã©diteurs
alias e='emacs'
alias enw='emacs -nw'
alias ec='emacsclient --no-wait -a emacs'
alias re='emacsclient -t'
alias d='svn diff | less'
alias gdb='gdb --args'
export EDITOR='emacsclient -a emacs'
#alias autres
alias less='less -m'
alias proc='ps aux | grep'
alias c='cd ..'
alias ls='ls --color=auto'
alias coin='play /usr/share/gnubiff/coin.wav'
alias w='w | sort | uniq -w 4 | grep -v USER | grep -v "load average"'
#alias internet
alias reco='sudo ethtool -s eth0 autoneg off speed 10 duplex half'
alias wake='wakeonlan -i 82.233.220.106 00:0a:e6:1d:3e:ef'
alias tray_daemon='rm /tmp/tray_daemon_control; mkfifo /tmp/tray_daemon_control; killall tray_daemon; cd ~/bin; ./tray_daemon&'
alias o='gnome-open'
#git
alias gb='git branch'
alias gba='git branch -a'
alias gc='git commit -v'
alias gd='git diff'
alias gl='git pull'
alias gp='git push'
alias gst='git status | less'
#latex
alias latexpreview="latexmk -pdfpreviewer gnome-open -dvipreviewer gnome-open -pspreviewer gnome-open -pvc"
alias pdflmk="latexpreview -pdf"
alias pslmk="latexpreview -ps"
alias dvilmk="latexpreview -dvi"
alias l='pdflmk'

#env var
export PATH=~/bin:$PATH

#oui, je veux les core dumps, merci beaucoup
ulimit -c unlimited >/dev/null 2>&1

#M-q = delete backward
bind '"\eq":backward-kill-word'
export HISTIGNORE="&:ls:[bf]g:cd:c"
export HISTSIZE=2000
export HISTFILESIZE=2000

# ls after each cd
cd() {
builtin cd "$@" && ls
}

alias boot='sudo /etc/init.d/bitlbee restart && reco && AUTOSSH_GATETIME=0 sunredir && sudo cpufreq-set -u 1Ghz && tray_daemon'
alias apt-up='sudo apt-get update && sudo apt-get dist-upgrade'
alias rsync='rsync -vahr --partial --progress'
recup() {
    rsync 82.233.220.106:~/"$@" .
}

ls
